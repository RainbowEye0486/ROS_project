<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity"
    android:background="@drawable/bachground_map"
    >

    <Button
        android:id="@+id/home_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="@drawable/home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/return_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="@drawable/back"
        app:layout_constraintStart_toEndOf="@+id/home_btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.78" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84" />



    <ImageView
        android:id="@+id/ticket"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:contentDescription="TODO"
        android:focusable="true"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintWidth_percent="0.17"

        app:layout_constraintVertical_bias="0.24"
        app:layout_constraintLeft_toLeftOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/beacon1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/beacon"
        android:contentDescription="TODO"
        android:visibility="invisible"
        android:layout_margin="5dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintLeft_toLeftOf="@+id/ticket"
        app:layout_constraintStart_toStartOf="@+id/ticket"
        app:layout_constraintTop_toTopOf="@+id/ticket"
        app:layout_constraintVertical_bias="0"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/beacon2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/beacon"
        android:contentDescription="TODO"
        android:visibility="invisible"
        android:layout_margin="5dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintLeft_toLeftOf="@+id/ticket"
        app:layout_constraintStart_toStartOf="@+id/ticket"
        app:layout_constraintTop_toTopOf="@+id/ticket"
        app:layout_constraintVertical_bias="0.24"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/beacon2_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="title"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon2"
        app:layout_constraintRight_toRightOf="@+id/beacon2"
        app:layout_constraintLeft_toLeftOf="@id/beacon2"
        app:layout_constraintTop_toTopOf="@+id/beacon2"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/beacon3"
        android:background="@drawable/beacon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_margin="5dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintLeft_toLeftOf="@+id/ticket"
        app:layout_constraintStart_toStartOf="@+id/ticket"
        app:layout_constraintTop_toTopOf="@+id/ticket"
        app:layout_constraintVertical_bias="0.48"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/beacon3_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="title"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon3"
        app:layout_constraintRight_toRightOf="@+id/beacon3"
        app:layout_constraintLeft_toLeftOf="@id/beacon3"
        app:layout_constraintTop_toTopOf="@+id/beacon3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/beacon1_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="title"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon1"
        app:layout_constraintRight_toRightOf="@+id/beacon1"
        app:layout_constraintLeft_toLeftOf="@id/beacon1"
        app:layout_constraintTop_toTopOf="@+id/beacon1"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/beacon4"
        android:background="@drawable/beacon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_margin="5dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintLeft_toLeftOf="@+id/ticket"
        app:layout_constraintStart_toStartOf="@+id/ticket"
        app:layout_constraintTop_toTopOf="@+id/ticket"
        app:layout_constraintVertical_bias="0.72"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/beacon5"
        android:background="@drawable/beacon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_margin="5dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintLeft_toLeftOf="@+id/ticket"
        app:layout_constraintStart_toStartOf="@+id/ticket"
        app:layout_constraintTop_toTopOf="@+id/ticket"
        app:layout_constraintVertical_bias="0.96"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/beacon4_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="title"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon4"
        app:layout_constraintRight_toRightOf="@+id/beacon4"
        app:layout_constraintLeft_toLeftOf="@id/beacon4"
        app:layout_constraintTop_toTopOf="@+id/beacon4"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/beacon5_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="title"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon5"
        app:layout_constraintRight_toRightOf="@+id/beacon5"
        app:layout_constraintLeft_toLeftOf="@id/beacon5"
        app:layout_constraintTop_toTopOf="@+id/beacon5"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/map_go"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn"
        android:text="帶位服務"
        android:textColor="#F8E7CD"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toStartOf="@+id/right_line"

        app:layout_constraintTop_toBottomOf="@+id/ticket"
        app:layout_constraintWidth_percent="0.14" />


    <ImageView
        android:id="@+id/bigMap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="50dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/right_line"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline" />

    <TextView
        android:id="@+id/floor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B1-B1"
        android:textSize="50sp"
        android:textColor="#70570C"
        android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="@+id/bigMap"
        app:layout_constraintTop_toTopOf="@+id/bigMap"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/up"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/arrow_up"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="@+id/bigMap" />

    <Button
        android:id="@+id/down"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/arrow_down"
        app:layout_constraintBottom_toBottomOf="@+id/bigMap"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline" />

    <Button
        android:id="@+id/left"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/arrow_left"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"

        app:layout_constraintStart_toStartOf="@+id/bigMap"
        app:layout_constraintTop_toTopOf="@+id/top_guideline" />

    <Button
        android:id="@+id/right"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/arrow_right"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
        app:layout_constraintEnd_toEndOf="@+id/bigMap"
        app:layout_constraintTop_toTopOf="@+id/top_guideline" />

    <ImageView
        android:id="@+id/minimap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.4" />




</androidx.constraintlayout.widget.ConstraintLayout>