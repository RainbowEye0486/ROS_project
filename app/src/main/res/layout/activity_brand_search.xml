<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/bachground_brand"
tools:context=".BrandSearchActivity">

    <Button
        android:id="@+id/home_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="@drawable/home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/return_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="@drawable/back"
        app:layout_constraintStart_toEndOf="@+id/home_btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.73" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/card_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78" />



    <ImageView
        android:id="@+id/ticket"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:contentDescription="TODO"
        android:focusable="true"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintWidth_percent="0.17"

        app:layout_constraintVertical_bias="0.24"
        app:layout_constraintLeft_toLeftOf="@+id/right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/beacon1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/beacon"
        android:contentDescription="TODO"
        android:visibility="invisible"
        android:layout_margin="5dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintLeft_toLeftOf="@+id/ticket"
        app:layout_constraintStart_toStartOf="@+id/ticket"
        app:layout_constraintTop_toTopOf="@+id/ticket"
        app:layout_constraintVertical_bias="0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/beacon1_cancel"
        android:layout_width="34dp"
        android:layout_height="0dp"
        android:background="@drawable/cancel_img"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon1"
        app:layout_constraintStart_toEndOf="@+id/beacon1"
        app:layout_constraintTop_toTopOf="@+id/beacon1" />


    <ImageView
        android:id="@+id/beacon2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/beacon"
        android:contentDescription="TODO"
        android:visibility="invisible"
        android:layout_margin="5dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintLeft_toLeftOf="@+id/ticket"
        app:layout_constraintStart_toStartOf="@+id/ticket"
        app:layout_constraintTop_toTopOf="@+id/ticket"
        app:layout_constraintVertical_bias="0.24"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/beacon2_cancel"
        android:layout_width="34dp"
        android:layout_height="0dp"
        android:background="@drawable/cancel_img"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon2"
        app:layout_constraintStart_toEndOf="@+id/beacon2"
        app:layout_constraintTop_toTopOf="@+id/beacon2"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:id="@+id/beacon2_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="40dp"
        android:text="title"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon2"
        app:layout_constraintRight_toRightOf="@+id/beacon2"
        app:layout_constraintLeft_toLeftOf="@id/beacon2"
        app:layout_constraintTop_toTopOf="@+id/beacon2"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/beacon3"
        android:background="@drawable/beacon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_margin="5dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintLeft_toLeftOf="@+id/ticket"
        app:layout_constraintStart_toStartOf="@+id/ticket"
        app:layout_constraintTop_toTopOf="@+id/ticket"
        app:layout_constraintVertical_bias="0.48"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/beacon3_cancel"
        android:layout_width="34dp"
        android:layout_height="0dp"
        android:background="@drawable/cancel_img"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon3"
        app:layout_constraintStart_toEndOf="@+id/beacon3"
        app:layout_constraintTop_toTopOf="@+id/beacon3" />


    <TextView
        android:id="@+id/beacon3_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="40dp"
        android:text="title"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon3"
        app:layout_constraintRight_toRightOf="@+id/beacon3"
        app:layout_constraintLeft_toLeftOf="@id/beacon3"
        app:layout_constraintTop_toTopOf="@+id/beacon3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/beacon1_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="40dp"
        android:text="title"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon1"
        app:layout_constraintRight_toRightOf="@+id/beacon1"
        app:layout_constraintLeft_toLeftOf="@id/beacon1"
        app:layout_constraintTop_toTopOf="@+id/beacon1"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/beacon4"
        android:background="@drawable/beacon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_margin="5dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintLeft_toLeftOf="@+id/ticket"
        app:layout_constraintStart_toStartOf="@+id/ticket"
        app:layout_constraintTop_toTopOf="@+id/ticket"
        app:layout_constraintVertical_bias="0.72"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/beacon4_cancel"
        android:layout_width="34dp"
        android:layout_height="0dp"
        android:background="@drawable/cancel_img"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon4"
        app:layout_constraintStart_toEndOf="@+id/beacon4"
        app:layout_constraintTop_toTopOf="@+id/beacon4" />

    <ImageView
        android:id="@+id/beacon5"
        android:background="@drawable/beacon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_margin="5dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintLeft_toLeftOf="@+id/ticket"
        app:layout_constraintStart_toStartOf="@+id/ticket"
        app:layout_constraintTop_toTopOf="@+id/ticket"
        app:layout_constraintVertical_bias="0.96"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/beacon5_cancel"
        android:layout_width="34dp"
        android:layout_height="0dp"
        android:background="@drawable/cancel_img"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon5"
        app:layout_constraintStart_toEndOf="@+id/beacon5"
        app:layout_constraintTop_toTopOf="@+id/beacon5" />

    <TextView
        android:id="@+id/beacon4_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="40dp"
        android:text="title"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon4"
        app:layout_constraintRight_toRightOf="@+id/beacon4"
        app:layout_constraintLeft_toLeftOf="@id/beacon4"
        app:layout_constraintTop_toTopOf="@+id/beacon4"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/brandtomap_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn"
        android:enabled="false"
        android:text="查詢地圖"
        android:textColor="#F8E7CD"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toStartOf="@+id/right"
        app:layout_constraintTop_toTopOf="@+id/bottom_guideline"
        app:layout_constraintWidth_percent="0.14" />

    <Button
        android:id="@+id/brand_search_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="查詢"
        android:textSize="25sp"
        android:textColor="#603A00"
        android:background="@drawable/btn"
        app:layout_constraintWidth_percent="0.10"


        app:layout_constraintBottom_toBottomOf="@+id/actvBrand"
        app:layout_constraintStart_toEndOf="@+id/actvBrand"
        app:layout_constraintTop_toTopOf="@+id/actvBrand" />

    <TextView
        android:id="@+id/beacon5_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="40dp"
        android:text="title"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/beacon5"
        app:layout_constraintRight_toRightOf="@+id/beacon5"
        app:layout_constraintLeft_toLeftOf="@id/beacon5"
        app:layout_constraintTop_toTopOf="@+id/beacon5"
        tools:ignore="MissingConstraints" />

    <AutoCompleteTextView
        android:id="@+id/actvBrand"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/searchbar"
        android:clickable="true"
        android:completionThreshold="1"
        android:focusable="true"
        android:hint="請輸入品牌名稱或是關鍵字..."
        android:imeOptions="flagNoExtractUi|actionSearch"
        android:inputType="text"
        android:padding="12dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/top_guideline"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintWidth_percent="0.57"


        />


    <Button
        android:id="@+id/cancel_search_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:background="@drawable/x"
        app:layout_constraintBottom_toBottomOf="@+id/actvBrand"
        app:layout_constraintEnd_toEndOf="@+id/actvBrand"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="@+id/actvBrand"
        app:layout_constraintTop_toTopOf="@+id/actvBrand" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/brand_recycleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:foregroundGravity="center"
        android:background="@drawable/searchrarea"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="@+id/card_guideline">
    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>